{
    "parserOptions": {
        "ecmaVersion": "2021",
        "sourceType": "module"
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "react-hooks"
    ],
    "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
      }
}